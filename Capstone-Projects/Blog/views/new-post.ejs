<%- include("partials/header.ejs") %>
  <div class="container-fluid">
    <h2 class="display-5 mb-3 margin-left">New Post</h2>
    <form class="row g-3 ml-5" action="/submit" method="POST">
      <div class="col-md-6">
        <label for="inputAddress" class="form-label">Name</label>
        <input type="text" class="form-control" placeholder="Type your name" id="inputName" name="inputName">
      </div>
      <div class="col-md-6 ">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" placeholder="your-email@domain.com" id="inputEmail" name="inputEmail">
      </div>
      <div class="col-md-6 ">
        <label for="inputEmail" class="form-label">Post Title</label>
        <input type="title" class="form-control" placeholder="Type the title for your post" id="inputTitle"
          name="inputTitle">
      </div>
      <div class="mb-3">
        <label for="newPostTextArea" class="form-label">Post message</label>
        <textarea class="form-control" placeholder="Enter your post message" id="newPostTextArea" name="newPostTextArea"
          rows="6"></textarea>
      </div>
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck" name="gridCheck" required="true">
          <label class="form-check-label" for="gridCheck">
            I agree with term and conditions
          </label>
        </div>
      </div>
      <div class="col-12 mb-3">
        <input class="btn btn-dark btn-padding-10 rounded-pill px-3" type="submit" value="Submit Post">
      </div>
    </form>
  </div>
  <%- include("partials/footer.ejs") %>